---
import { getSizeProp, type OptionalSizeProp } from "@gemini-ui-astro/core";

export interface Props extends astroHTML.JSX.HTMLAttributes {
  size?: OptionalSizeProp;
}

const { class: className, size, ...rest } = Astro.props;
---

<i {...rest} class="gx-icon gx-icon-dogecoin-circle-solid"></i>

<style
  lang="scss"
  define:vars={{
    "gx-size": size ? getSizeProp(size) : "inherit",
  }}
>
  .gx-icon-dogecoin-circle-solid::before{mask-image:url('data:image/svg+xml;charset=utf-8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none"><path fill="currentColor" fill-rule="evenodd" d="M1.25 12C1.25 6.063 6.063 1.25 12 1.25S22.75 6.063 22.75 12 17.937 22.75 12 22.75 1.25 17.937 1.25 12m15.348-3.268c.426.845.652 1.919.652 3.268 0 1.35-.226 2.424-.652 3.268a4.1 4.1 0 0 1-1.761 1.814c-1.341.716-2.988.692-4.184.675l-.065-.001a1.356 1.356 0 0 1-1.338-1.354V12.75H8a.75.75 0 0 1 0-1.5h1.25V7.598c0-.747.603-1.343 1.338-1.354h.065c1.196-.018 2.843-.042 4.184.674.71.38 1.329.959 1.76 1.814M10.75 11.25V7.742c1.242-.015 2.453.004 3.38.5.454.241.844.602 1.129 1.167.29.576.491 1.401.491 2.591s-.2 2.015-.491 2.592a2.6 2.6 0 0 1-1.129 1.167c-.927.495-2.138.515-3.38.5V12.75H12a.75.75 0 0 0 0-1.5z" clip-rule="evenodd"/></svg>');}

  .gx-icon {
    display: inline-block;
    font-size: var(--gx-size);

    &::before {
      content: " ";
      display: block;
      background: currentColor;
      mask-size: cover;
      -webkit-mask-size: cover;
      width: 1em;
      height: 1em;
    }
  }
</style>
