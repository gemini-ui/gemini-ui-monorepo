---
import { getSizeProp, type OptionalSizeProp } from "@gemini-ui-astro/core";

export interface Props extends astroHTML.JSX.HTMLAttributes {
  size?: OptionalSizeProp;
}

const { class: className, size, ...rest } = Astro.props;
---

<i {...rest} class="gx-icon gx-icon-network-left-solid"></i>

<style
  lang="scss"
  define:vars={{
    "gx-size": size ? getSizeProp(size) : "inherit",
  }}
>
  .gx-icon-network-left-solid::before{mask-image:url('data:image/svg+xml;charset=utf-8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none"><rect width="7" height="5" x="2" y="21" fill="currentColor" stroke="currentColor" stroke-width="1.5" rx=".6" transform="rotate(-90 2 21)"/><rect width="7" height="5" x="17" y="15.5" fill="currentColor" stroke="currentColor" stroke-width="1.5" rx=".6" transform="rotate(-90 17 15.5)"/><rect width="7" height="5" x="2" y="10" fill="currentColor" stroke="currentColor" stroke-width="1.5" rx=".6" transform="rotate(-90 2 10)"/><path stroke="currentColor" stroke-width="1.5" d="M7 17.5h3.5a2 2 0 0 0 2-2v-7a2 2 0 0 0-2-2H7m5.5 5.5H17"/></svg>');}

  .gx-icon {
    display: inline-block;
    font-size: var(--gx-size);

    &::before {
      content: " ";
      display: block;
      background: currentColor;
      mask-size: cover;
      -webkit-mask-size: cover;
      width: 1em;
      height: 1em;
    }
  }
</style>
