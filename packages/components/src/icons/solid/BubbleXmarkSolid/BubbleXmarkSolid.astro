---
import { getSizeProp, type OptionalSizeProp } from "@gemini-ui-astro/core";

export interface Props extends astroHTML.JSX.HTMLAttributes {
  size?: OptionalSizeProp;
}

const { class: className, size, ...rest } = Astro.props;
---

<i {...rest} class="gx-icon gx-icon-bubble-xmark-solid"></i>

<style
  lang="scss"
  define:vars={{
    "gx-size": size ? getSizeProp(size) : "inherit",
  }}
>
  .gx-icon-bubble-xmark-solid::before{mask-image:url('data:image/svg+xml;charset=utf-8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none"><path fill="currentColor" fill-rule="evenodd" d="m19.773 8.955-.53-.53-.53.53a2.25 2.25 0 0 1-3.183-3.182l.53-.53-.53-.53a2.25 2.25 0 0 1-.21-2.94A10.7 10.7 0 0 0 12 1.25C6.063 1.25 1.25 6.063 1.25 12c0 1.856.471 3.605 1.3 5.13l-.787 4.233a.75.75 0 0 0 .874.874l4.233-.788A10.7 10.7 0 0 0 12 22.75c5.937 0 10.75-4.813 10.75-10.75 0-.914-.114-1.802-.329-2.65a2.25 2.25 0 0 1-2.648-.395" clip-rule="evenodd"/><path fill="currentColor" fill-rule="evenodd" d="M16.59 2.59a.75.75 0 0 1 1.061 0l1.591 1.592 1.591-1.591a.75.75 0 1 1 1.061 1.06l-1.591 1.591 1.591 1.591a.75.75 0 0 1-1.06 1.061l-1.592-1.59-1.59 1.59a.75.75 0 1 1-1.061-1.06l1.59-1.592-1.59-1.59a.75.75 0 0 1 0-1.061" clip-rule="evenodd"/></svg>');}

  .gx-icon {
    display: inline-block;
    font-size: var(--gx-size);

    &::before {
      content: " ";
      display: block;
      background: currentColor;
      mask-size: cover;
      -webkit-mask-size: cover;
      width: 1em;
      height: 1em;
    }
  }
</style>
