---
import { getSizeProp, type OptionalSizeProp } from "@gemini-ui-astro/core";

export interface Props extends astroHTML.JSX.HTMLAttributes {
  size?: OptionalSizeProp;
}

const { class: className, size, ...rest } = Astro.props;
---

<i {...rest} class="gx-icon gx-icon-cloud-square-solid"></i>

<style
  lang="scss"
  define:vars={{
    "gx-size": size ? getSizeProp(size) : "inherit",
  }}
>
  .gx-icon-cloud-square-solid::before{mask-image:url('data:image/svg+xml;charset=utf-8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none"><path fill="currentColor" fill-rule="evenodd" d="M3.6 2.25A1.35 1.35 0 0 0 2.25 3.6v16.8c0 .746.604 1.35 1.35 1.35h16.8a1.35 1.35 0 0 0 1.35-1.35V3.6a1.35 1.35 0 0 0-1.35-1.35zm8.4 5c-1.792 0-2.897.557-3.491 1.464-.35.536-.47 1.128-.511 1.609-.445.085-.94.255-1.388.551-.76.502-1.36 1.353-1.36 2.626s.6 2.124 1.36 2.626c.72.475 1.555.624 2.117.624h6.546c.562 0 1.398-.149 2.117-.624.76-.502 1.36-1.353 1.36-2.626s-.6-2.124-1.36-2.626a3.9 3.9 0 0 0-1.388-.551c-.04-.481-.16-1.073-.51-1.609-.594-.907-1.7-1.464-3.492-1.464" clip-rule="evenodd"/></svg>');}

  .gx-icon {
    display: inline-block;
    font-size: var(--gx-size);

    &::before {
      content: " ";
      display: block;
      background: currentColor;
      mask-size: cover;
      -webkit-mask-size: cover;
      width: 1em;
      height: 1em;
    }
  }
</style>
