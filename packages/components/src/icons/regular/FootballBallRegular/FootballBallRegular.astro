---
import { getSizeProp, type OptionalSizeProp } from "@gemini-ui-astro/core";

export interface Props extends astroHTML.JSX.HTMLAttributes {
  size?: OptionalSizeProp;
}

const { class: className, size, ...rest } = Astro.props;
---

<i {...rest} class="gx-icon gx-icon-football-ball-regular"></i>

<style
  lang="scss"
  define:vars={{
    "gx-size": size ? getSizeProp(size) : "inherit",
  }}
>
  .gx-icon-football-ball-regular::before{mask-image:url('data:image/svg+xml;charset=utf-8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke-width="1.5"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" d="M4.115 14.015a22.3 22.3 0 0 0-.103 3.665 2.413 2.413 0 0 0 2.309 2.308c1.007.052 2.294.055 3.664-.103m-5.87-5.87C4.394 11.604 5.17 8.93 7.05 7.05s4.554-2.656 6.965-2.935m-9.9 9.9 5.87 5.87m0 0c2.411-.279 5.084-1.055 6.965-2.935 1.88-1.88 2.656-4.554 2.935-6.965m-5.87-5.87a22.3 22.3 0 0 1 3.665-.103 2.413 2.413 0 0 1 2.308 2.309 22.3 22.3 0 0 1-.103 3.664m-5.87-5.87 5.87 5.87M9.172 14.828l1.414-1.414m0 0L9.172 12m1.414 1.414L12 14.828m-1.414-1.414 2.828-2.828m0 0 1.414-1.414m-1.414 1.414L12 9.172m1.414 1.414L14.828 12"/></svg>');}

  .gx-icon {
    display: inline-block;
    font-size: var(--gx-size);

    &::before {
      content: " ";
      display: block;
      background: currentColor;
      mask-size: cover;
      -webkit-mask-size: cover;
      width: 1em;
      height: 1em;
    }
  }
</style>
