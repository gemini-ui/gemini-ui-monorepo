---
import { getSizeProp, type OptionalSizeProp } from "@gemini-ui-astro/core";

export interface Props extends astroHTML.JSX.HTMLAttributes {
  size?: OptionalSizeProp;
}

const { class: className, size, ...rest } = Astro.props;
---

<i {...rest} class="gx-icon gx-icon-closed-captions-tag-regular"></i>

<style
  lang="scss"
  define:vars={{
    "gx-size": size ? getSizeProp(size) : "inherit",
  }}
>
  .gx-icon-closed-captions-tag-regular::before{mask-image:url('data:image/svg+xml;charset=utf-8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke-width="1.5"><path stroke="currentColor" d="M1 15V9a6 6 0 0 1 6-6h10a6 6 0 0 1 6 6v6a6 6 0 0 1-6 6H7a6 6 0 0 1-6-6Z"/><path stroke="currentColor" stroke-linecap="round" d="m10.5 10-.172-.172a2.83 2.83 0 0 0-2-.828v0A2.83 2.83 0 0 0 5.5 11.828v.344A2.83 2.83 0 0 0 8.328 15v0c.75 0 1.47-.298 2-.828L10.5 14m8-4-.172-.172a2.83 2.83 0 0 0-2-.828v0a2.83 2.83 0 0 0-2.828 2.828v.344A2.83 2.83 0 0 0 16.328 15v0c.75 0 1.47-.298 2-.828L18.5 14"/></svg>');}

  .gx-icon {
    display: inline-block;
    font-size: var(--gx-size);

    &::before {
      content: " ";
      display: block;
      background: currentColor;
      mask-size: cover;
      -webkit-mask-size: cover;
      width: 1em;
      height: 1em;
    }
  }
</style>
