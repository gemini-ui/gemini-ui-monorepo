---
import { getSizeProp, type OptionalSizeProp } from "@gemini-ui-astro/core";

export interface Props extends astroHTML.JSX.HTMLAttributes {
  size?: OptionalSizeProp;
}

const { class: className, size, ...rest } = Astro.props;
---

<i {...rest} class="gx-icon gx-icon-eject-regular"></i>

<style
  lang="scss"
  define:vars={{
    "gx-size": size ? getSizeProp(size) : "inherit",
  }}
>
  .gx-icon-eject-regular::before{mask-image:url('data:image/svg+xml;charset=utf-8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke-width="1.5"><path fill="currentColor" d="m5 14-.592-.46A.75.75 0 0 0 5 14.75zm14 0v.75a.75.75 0 0 0 .592-1.21zm-14 .75h14v-1.5H5zm5.619-9.196L4.408 13.54l1.184.92 6.21-7.985zm8.973 7.986-6.21-7.986-1.185.921 6.211 7.986zm-7.79-7.065a.25.25 0 0 1 .395 0l1.184-.92a1.75 1.75 0 0 0-2.762 0zM5 17.25a.75.75 0 0 0 0 1.5zm14 1.5a.75.75 0 0 0 0-1.5zm-14 0h14v-1.5H5z"/></svg>');}

  .gx-icon {
    display: inline-block;
    font-size: var(--gx-size);

    &::before {
      content: " ";
      display: block;
      background: currentColor;
      mask-size: cover;
      -webkit-mask-size: cover;
      width: 1em;
      height: 1em;
    }
  }
</style>
