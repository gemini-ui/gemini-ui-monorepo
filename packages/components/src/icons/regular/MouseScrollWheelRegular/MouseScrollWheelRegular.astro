---
import { getSizeProp, type OptionalSizeProp } from "@gemini-ui-astro/core";

export interface Props extends astroHTML.JSX.HTMLAttributes {
  size?: OptionalSizeProp;
}

const { class: className, size, ...rest } = Astro.props;
---

<i {...rest} class="gx-icon gx-icon-mouse-scroll-wheel-regular"></i>

<style
  lang="scss"
  define:vars={{
    "gx-size": size ? getSizeProp(size) : "inherit",
  }}
>
  .gx-icon-mouse-scroll-wheel-regular::before{mask-image:url('data:image/svg+xml;charset=utf-8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke-width="1.5"><path fill="currentColor" d="m12 5 .53-.53a.75.75 0 0 0-1.06 0zm0 8-.53.53a.75.75 0 0 0 1.06 0zM9.47 6.47a.75.75 0 0 0 1.06 1.06zm4 1.06a.75.75 0 1 0 1.06-1.06zm-2.94 2.94a.75.75 0 1 0-1.06 1.06zm4 1.06a.75.75 0 1 0-1.06-1.06zM3.25 10v4h1.5v-4zm17.5 4v-4h-1.5v4zm-9.5-9v8h1.5V5zm.22-.53-2 2 1.06 1.06 2-2zm0 1.06 2 2 1.06-1.06-2-2zm1.06 6.94-2-2-1.06 1.06 2 2zm0 1.06 2-2-1.06-1.06-2 2zM20.75 10A8.75 8.75 0 0 0 12 1.25v1.5A7.25 7.25 0 0 1 19.25 10zM12 22.75A8.75 8.75 0 0 0 20.75 14h-1.5A7.25 7.25 0 0 1 12 21.25zM3.25 14A8.75 8.75 0 0 0 12 22.75v-1.5A7.25 7.25 0 0 1 4.75 14zm1.5-4A7.25 7.25 0 0 1 12 2.75v-1.5A8.75 8.75 0 0 0 3.25 10z"/></svg>');}

  .gx-icon {
    display: inline-block;
    font-size: var(--gx-size);

    &::before {
      content: " ";
      display: block;
      background: currentColor;
      mask-size: cover;
      -webkit-mask-size: cover;
      width: 1em;
      height: 1em;
    }
  }
</style>
