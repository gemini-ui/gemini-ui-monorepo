---
import "@gemini-ui-css/components/alert.css";
import { classMerge } from "@gemini-ui-astro/core";

interface Props extends astroHTML.JSX.HTMLAttributes {
  dynamicGlow?: boolean;
  pulse?: "none" | "light" | "infinite";
  severity?: "success" | "warning" | "error" | "info";
}

const {
  class: className,
  dynamicGlow,
  pulse = "light",
  severity = "info",
  ...props
} = Astro.props;
---

<section
  {...props}
  class={classMerge(
    "gx-alert",
    dynamicGlow && "gx-dynamic-glow",
    className,
    `gx-alert-severity-${severity}`,
    `gx-alert-pulse-${pulse}`,
  )}
>
  <div class="gx-alert-pulse"></div>
  <div class="gx-alert-message">
    <slot />
  </div>
</section>
