---
import "@gemini-ui-css/components/divider.css";
import { classMerge, type OptionalSizeProp } from "@gemini-ui-astro/core";
import { getSizeProp } from "@gemini-ui-astro/core";

export interface Props {
  class?: string;
  thickness?: string;
  orientation?: "horizontal" | "vertical";
  color?: string;
  mt?: OptionalSizeProp;
  mb?: OptionalSizeProp;
  ml?: OptionalSizeProp;
  mr?: OptionalSizeProp;
}

const {
  class: className,
  thickness = "1px",
  orientation = "horizontal",
  color = "#323232",
  mt = 1,
  mb = 1,
  ml = 0,
  mr = 0,
} = Astro.props;
---

<hr class={classMerge("gx-divider", className, `gx-divider-${orientation}`)} />

<style
  lang="scss"
  define:vars={{
    "gx-divider-thickness": thickness,
    "gx-divider-color": color,
    "gx-divider-mt": getSizeProp(mt, 1),
    "gx-divider-mb": getSizeProp(mb, 1),
    "gx-divider-ml": getSizeProp(ml, 0),
    "gx-divider-mr": getSizeProp(mr, 0),
  }}
></style>
