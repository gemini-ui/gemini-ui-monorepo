---
import {
  Typography as GeminiTypography,
  Grid,
} from "@gemini-ui-astro/components";
import Layout from "../../../../layouts/Layout.astro";
---

<Layout title="Gemini UI - Divider">
  <main>
    <Grid class="grid" container gap="4px">
      <Grid xs={12}>
        <GeminiTypography variant="h1">This is an H1 heading</GeminiTypography>
      </Grid>
      <Grid xs={12}>
        <GeminiTypography variant="h2">This is an H2 heading</GeminiTypography>
      </Grid>
      <Grid xs={12}>
        <GeminiTypography variant="h3" override="h2">
          This is an H2 heading with an H3 override
        </GeminiTypography>
      </Grid>
      <Grid xs={12}>
        <GeminiTypography variant="h3">This is an H3 heading</GeminiTypography>
      </Grid>
      <Grid xs={12}>
        <GeminiTypography variant="h4">This is an H4 heading</GeminiTypography>
      </Grid>
      <Grid xs={12}>
        <GeminiTypography variant="h5">This is an H5 heading</GeminiTypography>
      </Grid>
      <Grid xs={12}>
        <GeminiTypography variant="h6">This is an H6 heading</GeminiTypography>
      </Grid>
      <Grid xs={12}>
        <GeminiTypography variant="subtitle1">
          This is a subtitle1
        </GeminiTypography>
      </Grid>
      <Grid xs={12}>
        <GeminiTypography variant="subtitle2">
          This is a subtitle2
        </GeminiTypography>
      </Grid>
      <Grid xs={12}>
        <GeminiTypography variant="body1">
          This is an body1 paragraph
        </GeminiTypography>
      </Grid>
      <Grid xs={12}>
        <GeminiTypography variant="body2">
          This is an body2 paragraph
        </GeminiTypography>
      </Grid>
      <Grid xs={12}>
        <GeminiTypography variant="caption">
          This is a caption paragraph
        </GeminiTypography>
      </Grid>
      <Grid xs={12}>
        <GeminiTypography variant="overline">
          This is an overline paragraph
        </GeminiTypography>
      </Grid>
    </Grid>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
</style>
